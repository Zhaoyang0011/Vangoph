@{
    ViewData["Title"] = "Image detail";
}
@model Image

<form method="post" asp-controller="Image" asp-action="Update" enctype="multipart/form-data">


    <!-------------------Left side Section for image uploading-------------->

    <div class="image-wrapper">
        <img src="@Model.ImageUrl" alt="Image">
    </div>
    <!-------------------right side Section for image uploading-------------->
    <input id="id" name="id" hidden="hidden" value="@Model.Id" required/>

    <div class="form-section input-section">
        <h3 style="text-align: center;">New Artwork</h3>
        <div class="input-box">
            <input id="name" name="name" value="@Model.Name" required/>
            <label>Art Title</label>
        </div>

        <div class="input-box">
            <input type="number" step="0.01" id="price" name="price" value="@Model.Price" required oninput="limitDecimalPlaces(event, 2)"/>
            <label>Price</label>
        </div>

        <div class="input-box">
            <input type="text" id="author" name="author" value="@Model.Author" required/>
            <label>Author</label>
        </div>


        <div class="input-box textarea-box">
            <textarea placeholder="Add Description Here :)" id="description" value="@Model.Description"
                name="description" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Upload</button>
    </div>


</form>
@using Vangoph.Models

@code {

    [Parameter]
    public Image Model { get; set; }

}


<div class="image-item">
    <a href="/Image/Detail?imageId=@Model.Id">
        <img src="@Model.ImageUrl" alt="Image">
    </a>
    <div class="name">@Model.Name</div>
    <div class="name">@String.Format("{0:#,##0.00}", Model.Price)</div>
</div>
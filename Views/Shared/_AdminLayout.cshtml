                <a asp-area="" asp-controller="Image" asp-action="Upload">Upload</a>
                <a asp-area="" asp-controller="Image" asp-action="Manage">Manage</a>
            </ul>
        </nav>
    </header>


    <div class="container">
        @RenderBody()
    </div>




    <footer class="border-top ">
        Â© Copyright of Vangoph's Backyard Co. 2024
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/imageDragDrop.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
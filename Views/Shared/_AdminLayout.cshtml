<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vangoph</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Vangoph.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" asp-append-version="true" />
</head>

@functions {
    public string GetCurrentRoute()
    {
        string route = (string)ViewContext.RouteData.Values["action"];
        return route;
    }

/*Check which route the page is right now*/
    public string GetStatus()
    {
        switch (GetCurrentRoute())
        {
            case "UploadPage":
                return "left:0";

            case "Manage":
                return "right:0";

            default:
                return "opacity:0";
        }
    }
}


<body>
    <header>
        <nav class="admin-nav">
            <a asp-area="" asp-controller="Image" asp-action="Index" class="nav-brand">Vangoph's Admin</a>
            <ul class="navbar ">
                <div class="switch">
                    <a asp-area="" asp-controller="Image" asp-action="Upload">Upload</a>
                    <a asp-area="" asp-controller="Image" asp-action="Manage">Manage</a>
                    <span class="switch-mask" style=@GetStatus()></span>
                </div>
            </ul>
        </nav>
    </header>
    <!--------------<p>Current Route: @GetCurrentRoute()</p>---------->

    <div class="container">
        @RenderBody()
    </div>




    <footer class="border-top ">
        Â© Copyright of Vangoph's Backyard Co. 2024
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/imageDragDrop.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>